@model Assignment_8.Controllers.Product_vm

@{ 
    ViewBag.Title = "Details";
}


    <img src="~/Content/Image/@Html.DisplayFor(model => model.ProductImage)" style="height:300px;width:500px" />
<link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
<div class="row">
    <div class="col-lg-12">
        <h4>Product Description</h4>
        <hr />
        <div class="panel panel-default panel-body">
            @Html.Raw(Model.ProductDescription)
        </div>
        <h4>Product Details</h4>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PromoPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductLength)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductWidth)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ProductHeight)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.ProductName)
                </td>
                @if (Model.PromoPrice != Model.ProductPrice){
                    <td>
                        <strike>@Html.DisplayFor(model => model.ProductPrice)</strike>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PromoPrice)
                    </td>
                } else{
                    <td>
                        @Html.DisplayFor(model => model.ProductPrice)
                    </td>
                    <td></td>
                }
                <td>
                    @Html.DisplayFor(model => model.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductWeight)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductLength)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductWidth)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductHeight)
                </td>

                <td class="button"> 
                    @Html.ActionLink("Add to cart", "AddToCart","ShoppingCart",new { id = Model.ProductId },"")
                </td>

            </tr>
        </table>
    </div>
</div>
    
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary" })
