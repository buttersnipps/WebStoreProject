<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Buy Nortel Phones</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @{
        var userAccount = new Assignment_8.Controllers.UserAccount(User as System.Security.Claims.ClaimsPrincipal);
    }
</head>
<body>
    <div class="navbar navbar-default2 navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            <div class="navbar-left">
              <img src="~/Content/Image/logo2.png" />
                </div>
            </div>
            <div class="nav navbar-nav navbar-left navbar-center">
     
                <div class="input-group col-md-12">
                    @using (Html.BeginForm("Customer_Product_Index", "Product", FormMethod.Get))
                         {
                        <p>
                             @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                            <input type="submit" class="btn btn-info" value="Search"  />
                        </p>
                         }
                </div>
               
            </div>
           
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (userAccount.HasRoleClaim("Executive"))
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.ActionLink("List of all products", "Index", "Product")</a></li>
                            <li><a href="#">@Html.ActionLink("Add a new product", "Create", "Product")</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Accounts", "Index", "AccountManager")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="wrapper">
        <!--Sidebar-->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li>Account</li>
                <li>Setting</li>
                <li>Logout</li>
            </ul>
        </div>
        <!--main content-->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#" class="btn btn-success" id="menu-toggle">Toggle Menu</a>

                        <div class="container body-content">
                            @RenderBody()
                            <hr />
                            <footer>
                                <p>&copy; @DateTime.Now.Year - Buy Nortel Phones</p>
                            </footer>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("menuDisplayed");
    });
        </script>
                    @Scripts.Render("~/bundles/bootstrap")
                    @RenderSection("scripts", required: false)
</body>
</html>
