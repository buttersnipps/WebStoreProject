@model PagedList.IPagedList<Assignment_8.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
<link href="~/Content/lightbox.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/lightbox.js"></script>
<div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" ></li>
        <li data-target="#myCarousel" data-slide-to="2" ></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
        <img src="~/Content/Image/htc.jpg" alt="htc" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/Content/Image/pixel.png" alt="google" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/Content/Image/samsung.jpg" alt="samsung" class="img-responsive" />
        </div>
    </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>

<table class="table">
    <tr>
        <th>

        </th>
     
        <th>
            @Html.ActionLink("Product Name", "Customer_Product_Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter}, new { @class = "btn btn-primary" })
        </th>
        <th>
            @Html.ActionLink("Product Price", "Customer_Product_Index", new { sortOrder = ViewBag.PriceSortParam, currentFilter = ViewBag.CurrentFilter}, new { @class = "btn btn-primary" })
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            <a href="~/Content/Image/@Html.DisplayFor(modelItem => item.ProductImage)" data-lightbox="product">
                <img src="~/Content/Image/@Html.DisplayFor(modelItem => item.ProductImage)" style="height:200px;width:200px" />
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>

        <td>
            @Html.ActionLink("Buy", "Details", new { id = item.ProductId},new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Customer_Product_Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))